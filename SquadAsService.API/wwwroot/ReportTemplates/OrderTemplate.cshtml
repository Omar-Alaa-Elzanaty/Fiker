@model Fiker.Application.Comman.Dtos.OrderReportDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Receipt</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .receipt-container {
            background: #fff;
            border: 1px solid #ccc;
            padding: 20px;
            width: 400px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

            .receipt-container h1 {
                text-align: center;
                color: #333;
                margin-bottom: 5px;
            }

            .receipt-container .company-name {
                text-align: center;
                color: #666;
                font-size: 14px;
                margin-bottom: 20px;
            }

        p {
            font-size: 14px;
            margin: 5px 0;
            color: #555;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            table thead {
                background: #f8f8f8;
            }

            table th, table td {
                padding: 10px;
                text-align: left;
                border: 1px solid #ddd;
            }

            table th {
                color: #444;
            }

        .total {
            margin-top: 20px;
            text-align: right;
            font-size: 16px;
            color: #333;
        }

        .order-id {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="receipt-container">
        <h1>Receipt</h1>
        <p class="company-name">@Model.CompanyName</p>
        <p><strong>Market:</strong> @Model.Market</p>
        <p><strong>Area:</strong> @Model.Area</p>
        <p><strong>Technology:</strong> @Model.Technology</p>
        <table>
            <thead>
                <tr>
                    <th>Job Title</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model.Jobs)
                {
                    <tr>
                        <td>@job.Title</td>
                        <td>@job.Quantity</td>
                        <td>$@job.Price.ToString("F2")</td>
                        <td>$@(job.Quantity * job.Price).ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="total">
            <strong>Total Cost:</strong> $@Model.TotalCost.ToString("F2")
        </div>
        <div class="order-id">
            <strong>Order Serial Number:</strong> @Model.Id
        </div>
    </div>
</body>
</html>
